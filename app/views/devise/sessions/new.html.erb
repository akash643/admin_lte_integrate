<div class="login-box">
  <div class="login-logo">
    <b>Login</b>
  </div>
   <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control input_user", placeholder: "email address" %>
      <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
       </div>
      </div>

  <div class="input-group mb-3">
    <%= f.password_field :password, autocomplete: "current-password" ,class: "form-control", placeholder: "password" %>
      <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
        </div>
  </div>
   <div class="row">
          <div class="col-8">
             <% if devise_mapping.rememberable? %>
                <div class="icheck-primary">
                  <%= f.check_box :remember_me %>
                  <label for="remember">
                    Remember Me
                  </label>
                </div>
              <% end %>
            </div>
          <!-- /.col -->
          <div class="col-4">
            <%= f.submit "Log in" ,class: "btn btn-primary btn-block" %>
          </div>
          <!-- /.col -->
        </div>
<% end %>
<div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>
      <!-- /.social-auth-links -->
 <%= render "devise/shared/links" %> 

    </div>
    <!-- /.login-card-body -->
  </div>
</div>



